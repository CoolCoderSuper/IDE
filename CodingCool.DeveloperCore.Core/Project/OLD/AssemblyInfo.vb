''' <summary>
''' Represents information about an assembly.
''' </summary>
Public Class AssemblyInfo

    ''' <summary>
    ''' Title of the assembly.
    ''' </summary>
    ''' <returns></returns>
    Public Property Title As String

    ''' <summary>
    ''' A description of the assembly.
    ''' </summary>
    ''' <returns></returns>
    Public Property Description As String

    ''' <summary>
    ''' The company who owns the assembly.
    ''' </summary>
    ''' <returns></returns>
    Public Property Company As String

    ''' <summary>
    ''' The product name.
    ''' </summary>
    ''' <returns></returns>
    Public Property Product As String

    ''' <summary>
    ''' The copyright information.
    ''' </summary>
    ''' <returns></returns>
    Public Property Copyright As String

    ''' <summary>
    ''' The trademark information.
    ''' </summary>
    ''' <returns></returns>
    Public Property Trademark As String

    ''' <summary>
    ''' The version of the assembly.
    ''' </summary>
    ''' <returns></returns>
    Public Property AssemblyVersion As Version

    ''' <summary>
    ''' The version of the file.
    ''' </summary>
    ''' <returns></returns>
    Public Property FileVersion As Version

    ''' <summary>
    ''' The GUID of the assembly.
    ''' </summary>
    ''' <returns></returns>
    Public Property GUID As String

    ''' <summary>
    ''' States whether the assembly is visible to COM.
    ''' </summary>
    ''' <returns></returns>
    Public Property COMVisible As Boolean

End Class